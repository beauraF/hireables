<%= form_with(model: export, local: true) do |form| %>
  <div class="bg-yellow-100 border-l-4 border-yellow-500 text-yellow-700 p-4 mb-6">
    <p class="font-bold">How it works?</p>
    <p>
      Precise your search by entering a location and/or language.<br>
      We will send you the first 1000 results of Github
      which matches your criteria <strong>by email</strong> in a few minutes.
    </p>
  </div>

  <% if export.errors.any? %>
    <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-6">
      <ul class="list-disc list-inside">
        <% export.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% if flash[:notice].present? %>
    <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-6">
      <p><%= flash[:notice] %></p>
    </div>
  <% end %>

  <div class="flex flex-wrap mb-6 -mx-3">
    <div class="w-full md:w-1/2 mb-6 md:mb-0 px-3">
      <%= form.label :location, class: 'block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2' %>
      <%= form.text_field :location, placeholder: 'Paris', autofocus: true, class: 'appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500' %>
    </div>

    <div class="w-full md:w-1/2 px-3">
      <%= form.label :language, class: 'block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2' %>
      <%= form.text_field :language, placeholder: 'Ruby', class: 'appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500' %>
    </div>
  </div>

  <div class="flex flex-wrap mb-6 -mx-3">
    <div class="w-full px-3">
      <%= form.label :email, 'Your email', class: 'block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2' %>
      <%= form.email_field :email, placeholder: 'john.doe@email.com', required: true, class: 'appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500' %>
    </div>
  </div>

  <div>
    <%= form.submit 'Search', class: 'appearance-none cursor-pointer block w-full py-3 px-4 border border-transparent text-sm leading-5 font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-500 focus:outline-none focus:border-indigo-700 focus:shadow-outline-indigo active:bg-indigo-700 transition duration-150 ease-in-out' %>
  </div>
<% end %>
