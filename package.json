{
  "name": "hireables",
  "private": true,
  "scripts": {
    "eslint:check": "eslint --max-warnings 0 '**/*.js'",
    "eslint:write": "eslint --max-warnings 0 --fix '**/*.js'",
    "prettier:check": "prettier --check '**/*.{js,json,yml,scss,md}'",
    "prettier:write": "prettier --write '**/*.{js,json,yml,scss,md}'"
  },
  "dependencies": {
    "@fullhuman/postcss-purgecss": "^3.0.0",
    "@rails/ujs": "^6.0.3",
    "@rails/webpacker": "5.2.1",
    "stimulus": "^1.1.1",
    "tailwindcss": "^1.9.6",
    "turbolinks": "^5.2.0",
    "webpack": "^5.9.0"
  },
  "devDependencies": {
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "webpack-dev-server": "^3.11.0"
  },
  "engines": {
    "node": "10.x",
    "yarn": "1.x"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "yarn eslint --max-warnings 0 --fix"
    ],
    "*.{js,json,yml,scss,md}": [
      "yarn prettier --write"
    ],
    "*": [
      "bundle exec rubocop --auto-correct --force-exclusion"
    ]
  }
}
